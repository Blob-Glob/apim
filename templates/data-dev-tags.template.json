{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "ApimServiceName": {
      "type": "string"
    },
    "PolicyXMLBaseUrl": {
      "type": "string"
    }
  },
  "resources": [
    {
      "properties": {
        "displayName": "HostInfo"
      },
      "name": "[concat(parameters('ApimServiceName'), '/HostInfo')]",
      "type": "Microsoft.ApiManagement/service/tags",
      "apiVersion": "2019-01-01"
    },
    {
      "properties": {
        "displayName": "MenuItems"
      },
      "name": "[concat(parameters('ApimServiceName'), '/MenuItems')]",
      "type": "Microsoft.ApiManagement/service/tags",
      "apiVersion": "2019-01-01"
    },
    {
      "properties": {
        "displayName": "Product"
      },
      "name": "[concat(parameters('ApimServiceName'), '/Product')]",
      "type": "Microsoft.ApiManagement/service/tags",
      "apiVersion": "2019-01-01"
    },
    {
      "properties": {
        "displayName": "Site"
      },
      "name": "[concat(parameters('ApimServiceName'), '/Site')]",
      "type": "Microsoft.ApiManagement/service/tags",
      "apiVersion": "2019-01-01"
    },
    {
      "properties": {
        "displayName": "SiteCatalog"
      },
      "name": "[concat(parameters('ApimServiceName'), '/SiteCatalog')]",
      "type": "Microsoft.ApiManagement/service/tags",
      "apiVersion": "2019-01-01"
    },
    {
      "properties": {
        "displayName": "Status"
      },
      "name": "[concat(parameters('ApimServiceName'), '/Status')]",
      "type": "Microsoft.ApiManagement/service/tags",
      "apiVersion": "2019-01-01"
    }
  ]
}